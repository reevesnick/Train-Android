<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/rLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backBtn"
        android:layout_above="@+id/chestBtn"
        android:layout_alignRight="@+id/searchView2"
        android:layout_alignEnd="@+id/searchView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoulders"
        android:id="@+id/shoulderBtn"
        android:layout_above="@+id/backBtn"
        android:layout_alignRight="@+id/searchView2"
        android:layout_alignEnd="@+id/searchView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chest"
        android:id="@+id/chestBtn"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/searchView2"
        android:layout_alignEnd="@+id/searchView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arms"
        android:id="@+id/armsBtn"
        android:layout_below="@+id/chestBtn"
        android:layout_alignRight="@+id/searchView2"
        android:layout_alignEnd="@+id/searchView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Core"
        android:id="@+id/coreBtn"
        android:layout_below="@+id/armsBtn"
        android:layout_alignRight="@+id/searchView2"
        android:layout_alignEnd="@+id/searchView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Legs"
        android:id="@+id/legsBtn"
        android:layout_below="@+id/coreBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SearchView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
